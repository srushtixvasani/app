<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BreatheActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/yeseva_one"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="@string/breathe"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/turquoise"
        android:textSize="40sp"
        android:textAllCaps="true"
        android:typeface="normal">

    </TextView>

    <ImageView
        android:id="@+id/breatheImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/breathe"
        android:src="@drawable/breathe"
        >
    </ImageView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:paddingHorizontal="10dp"
        android:orientation="horizontal"
        android:gravity="start">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="100dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/white"
            app:strokeWidth="2dp"
            app:strokeColor="@color/blue">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/breatheButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text=" START "
                    android:textSize="25sp"
                    android:drawableLeft="@drawable/ic_start"
                    android:background="@color/transparent"
                    android:textColor="@color/green"
                    android:gravity="center_vertical"
                    android:layout_gravity="start">

                </com.google.android.material.button.MaterialButton>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/white"
        app:strokeWidth="3dp"
        android:layout_marginTop="440dp"
        app:strokeColor="@color/white"
        app:cardUseCompatPadding="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/minute"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Minutes:"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">

        </androidx.appcompat.widget.AppCompatTextView>

    </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/white"
        app:strokeWidth="3dp"
        android:layout_marginTop="510dp"
        app:strokeColor="@color/white"
        app:cardUseCompatPadding="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/numOfBreathTaken"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Breaths taken:"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">

        </androidx.appcompat.widget.AppCompatTextView>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/white"
        app:strokeWidth="3dp"
        android:layout_marginTop="580dp"
        app:strokeColor="@color/white"
        app:cardUseCompatPadding="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/minsToday"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Minutes today:"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:gravity="center_vertical"
            android:paddingLeft="20dp">

        </androidx.appcompat.widget.AppCompatTextView>

    </com.google.android.material.card.MaterialCardView>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/button"
            android:src="@drawable/home_icon"
            app:layout_anchor="@id/bottomAppBar" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</RelativeLayout>