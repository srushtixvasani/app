<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/afternoon_background"
    tools:context=".AfternoonActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="Afternoon Routine"
        android:textColor="@color/white"
        android:textSize="40sp">

    </androidx.appcompat.widget.AppCompatTextView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayoutCompat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="70dp"
        app:layout_anchorGravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/peach_orange"
            android:layout_gravity="start"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/transparent"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_reward">

            </androidx.appcompat.widget.AppCompatImageButton>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="25sp"
                android:textColor="@color/mustard_yellow"
                android:fontFamily="monospace"
                android:layout_gravity="start"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:paddingHorizontal="20dp">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="end"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="Reward"
                android:textColor="@color/white"
                android:textSize="25sp">

            </androidx.appcompat.widget.AppCompatTextView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/peach_orange"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/transparent"
                android:paddingLeft="10dp"
                android:src="@drawable/ic_timer">
            </androidx.appcompat.widget.AppCompatImageButton>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:fontFamily="monospace"
                android:gravity="bottom"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:text="12:00"
                android:textColor="@color/mustard_yellow"
                android:textSize="25sp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="end"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="Start"
                android:textColor="@color/white"
                android:textSize="25sp">

            </androidx.appcompat.widget.AppCompatTextView>

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:backgroundTint="@color/peach_orange"
        app:cardCornerRadius="20dp"
        android:paddingHorizontal="5dp"
        android:layout_marginHorizontal="5dp"
        app:strokeColor="@color/white"
        app:strokeWidth="3dp">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/mustard_yellow"
                android:text="M"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/mustard_yellow"
                android:text="T"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/mustard_yellow"
                android:text="W"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/mustard_yellow"
                android:text="T"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/mustard_yellow"
                android:text="F"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/mustard_yellow"
                android:text="S"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp">

            </com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="@color/mustard_yellow"
                android:text="S"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:strokeColor="@color/white"
                app:strokeWidth="3dp">

            </com.google.android.material.button.MaterialButton>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="250dp"
        app:layout_anchorGravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/peach_orange"
            android:layout_gravity="start"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp">


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2 hours"
                android:textSize="25sp"
                android:textColor="@color/mustard_yellow"
                android:fontFamily="monospace"
                android:layout_gravity="start"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:gravity="start"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="Duration"
                android:textColor="@color/white"
                android:textSize="25sp">

            </androidx.appcompat.widget.AppCompatTextView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="170dp"
            android:layout_height="100dp"
            android:layout_gravity="end"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/peach_orange"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="@color/white"
            app:strokeWidth="3dp">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_notifications">
            </androidx.appcompat.widget.AppCompatImageButton>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="OFF"
                android:textSize="25sp"
                android:textColor="@color/mustard_yellow"
                android:fontFamily="monospace"
                android:layout_gravity="start"
                android:gravity="bottom"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:gravity="end"
                android:paddingRight="9dp"
                android:paddingTop="5dp"
                android:text="Reminder"
                android:textColor="@color/white"
                android:textSize="25sp">

            </androidx.appcompat.widget.AppCompatTextView>

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginRight="10dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="100dp"
            android:layout_height="100dp"

            app:cardCornerRadius="100dp"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/mustard_yellow"
            app:strokeWidth="3dp"
            app:strokeColor="@color/white">

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_play"
                android:background="@color/transparent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp">

            </androidx.appcompat.widget.AppCompatImageButton>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Start Routine"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:gravity="center">

            </androidx.appcompat.widget.AppCompatTextView>

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="80dp"
        android:orientation="vertical">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:paddingLeft="15dp"
                android:text="Habits"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_gravity="start">
            </androidx.appcompat.widget.AppCompatTextView>

            <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_gravity="start"
                android:src="@drawable/ic_add"
                android:backgroundTint="@color/transparent">
            </androidx.appcompat.widget.AppCompatImageButton>

        </androidx.gridlayout.widget.GridLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="@color/transparent_white"
            app:strokeWidth="3dp"
            app:strokeColor="@color/white"
            app:cardUseCompatPadding="true">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Lunch"
                android:textSize="25sp"
                android:textColor="@color/peach_orange"
                android:gravity="center_vertical"
                android:paddingLeft="20dp">

            </androidx.appcompat.widget.AppCompatTextView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardCornerRadius="20dp"
            app:strokeWidth="3dp"
            app:strokeColor="@color/white"
            android:backgroundTint="@color/transparent_white"
            app:cardUseCompatPadding="true">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Productivity"
                android:textSize="25sp"
                android:textColor="@color/peach_orange"
                android:gravity="center_vertical"
                android:paddingLeft="20dp">

            </androidx.appcompat.widget.AppCompatTextView>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:cardUseCompatPadding="true"
            app:strokeWidth="3dp"
            app:strokeColor="@color/white"
            android:backgroundTint="@color/transparent_white"
            app:cardCornerRadius="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Daily Exercise"
                android:textSize="25sp"
                android:textColor="@color/peach_orange"
                android:gravity="center_vertical"
                android:paddingLeft="20dp">

            </androidx.appcompat.widget.AppCompatTextView>

        </com.google.android.material.card.MaterialCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottom_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:backgroundTint="@color/peach_orange">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/morning"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/dark_blue_opacity_2"
            android:foregroundGravity="center"
            android:src="@drawable/ic_sun" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/home"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/dark_blue_opacity_2"
            android:foregroundGravity="center"

            android:src="@drawable/ic_home" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/evening"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@color/dark_blue_opacity_2"
            android:foregroundGravity="center"
            android:src="@drawable/ic_night" />
    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>